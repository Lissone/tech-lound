{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "noEmit": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@http/*": ["http/*"],
      "@messaging/*": ["messaging/*"],
      "@services/*": ["services/*"],
      "@database/*": ["database/*"],
      "@inputs/*": ["http/graphql/inputs/*"],
      "@models/*": ["http/graphql/models/*"],
      "@resolvers/*": ["http/graphql/resolvers/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
